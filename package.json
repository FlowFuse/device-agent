        "eslint-plugin-no-only-tests": "^3.3.0",
        "globals": "^16.0.0",
        "mocha": "^10.0.0",
        "neostandard": "^0.12.2",
        "proxy": "^2.1.1",
        "rewire": "^7.0.0",
        "should": "^13.2.3",
